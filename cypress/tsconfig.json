{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "types": ["cypress", "node"],
    "outDir": "../dist/cypress",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "**/*.ts",
    "support/index.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}